@model Mvc_MusteriTakipUygulaması.Models.Admin

@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_MusteriTakipLayout.cshtml";
}


<div class="content">
    <form method="post">
        <div class="col-lg-6 mx-auto">
            <div class="card">
                <div class="card-header"><strong>Kullanıcı Güncelleme Formu</strong></div>
                <div class="card-body card-block">
                    <div class="form-group">
                        <label asp-for="AdminID" class=" form-control-label"> <strong>ID</strong> </label>
                        <input readonly asp-for="AdminID"  type="text" class="form-control" >
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class=" form-control-label"> <strong>Ad</strong> </label>
                        <input asp-for="Name" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class=" form-control-label"><strong>Soyad</strong></label>
                        <input asp-for="Surname" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Company" class=" form-control-label"><strong>Firma Adı</strong></label>
                        <input asp-for="Company" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class=" form-control-label"><strong>Kullanıcı Adı</strong></label>
                        <input asp-for="UserName" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class=" form-control-label"><strong>Şifre</strong></label>
                        <input asp-for="Password" type="text" class="form-control">
                    </div>

                    <div class="col col-md-12">
                        <label class=" form-control-label"><strong>Kullanıcı Rolü</strong> (A:Admin / M:Müşteri)</label>
                    </div>
                    <div class="col col-md-9">
                        <div class="form-check">
                            <div class="radio">
                                <label asp-for="AdminRole" class="form-check-label">
                                    <input type="radio" id="radio1" asp-for="AdminRole" value="M" class="form-check-input">M
                                </label>
                            </div>
                            <div class="radio">
                                <label asp-for="AdminRole" class="form-check-label ">
                                    <input type="radio" id="radio2" asp-for="AdminRole" value="A" class="form-check-input">A
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
                <button asp-controller="UserList" asp-action="UpdateUser" type="submit" class="btn btn-info mt-3 align-items-center">Güncelle</button>
            </div>

        </div>


    </form>


</div>


