@using Mvc_MusteriTakipUygulaması.Models
@model List<Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MusteriTakipLayout.cshtml";
}


<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Müşteri/Tedarikçi Listesi</strong>
                    </div>
                    <div class="table-stats order-table ov-h">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Marka</th>
                                    <th>Unvan</th>
                                    <th>Vergi Dairesi</th>
                                    <th>Web Sitesi</th>
                                    <th>Mail</th>
                                    <th>İmza Yetkilisi</th>
                                    <th style="text-align: center">Sil</th>
                                    <th style="text-align: center">Güncelle</th>
                                    <th style="text-align: center">Detaylar</th>
                                    <th style="text-align: center">Yeni İş</th>


                                </tr>
                            </thead>

                            @foreach (var item in Model.OrderBy(x => x.Tarih))
                            {
                                <tbody>
                                    <tr>
                                        <td> @item.Marka </td>
                                        <td> @item.Unvan </td>
                                        <td> @item.VergiDairesi </td>
                                        <td style="text-transform: none"> @item.WebSitesi </td>
                                        <td style="text-transform: none"> @item.Email </td>
                                        <td> @item.ImzaYetkilisiAdiSoyadi1 </td>
                                        <td style="text-align: center"> <a asp-controller="Islemler" asp-action="DeleteClient" asp-route-id="@item.MusteriID" class="badge badge-danger">Sil</a> </td>
                                        <td style="text-align: center"> <a asp-controller="Islemler" asp-action="GetClient" asp-route-id="@item.MusteriID" class="badge badge-complete">Güncelle</a> </td>
                                        <td style="text-align: center"> <a asp-controller="Islemler" asp-action="ClientDetailTable" asp-route-id="@item.MusteriID" class="badge badge-info">Detaylar</a> </td>
                                        <td style="text-align: center"> <a asp-controller="Islemler" asp-action="YeniIsEkle" asp-route-id="@item.MusteriID" class="badge badge-info">İş Ekle</a> </td>

                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
                <a asp-controller="Islemler" asp-action="AddClient" class="btn btn-info mx-auto">Yeni Müşteri Ekle</a>
                <a asp-controller="Islemler" asp-action="WorkList" class="btn btn-info mx-auto">Tüm İşleri Görüntüle</a>

            </div>
        </div>
    </div>
</div>