            <div class="col-sm-3 offset-sm-1">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Tarihi Yaklaşan İşler</strong>
                    </div>
                    <div class="table-stats order-table ov-h">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Müşteri Adı</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Where(x => x.Tarih >= DateTime.Today).OrderBy(x => x.Tarih))
                                {
                                    <tr>
                                        <td>@item.Client.Unvan</td>
                                        <td>@item.Tarih.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>





        </div>

    </div>




</div>