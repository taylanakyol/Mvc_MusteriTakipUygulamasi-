@using Mvc_MusteriTakipUygulaması.Models
@model List<WorkList>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MusteriTakipLayout.cshtml";
}

<div class="content " style="padding: 50px; ">
    <div class="animated fadeIn ">



        <div class="row">

            <div class="col-sm-8">
                <div class="row" style="justify-content: center; margin-top:auto ">

                    <div class="card text-white bg-flat-color-3 col-sm-3 p-1 m-3" style="min-height:100px">
                        <div class="card-body">
                            <div class="card-left  float-left">
                                <a asp-controller="MusteriOzet" asp-action="Index"><p class="text-body mt-1 m-0"> <strong>Müşteri</strong> </p></a>
                            </div>
                        </div>
                    </div>

                    <div class="card text-white bg-flat-color-3 height-125 col-sm-3 p-1 m-3" style="min-height:100px">
                        <div class="card-body">
                            <div class="card-left  float-left">
                                <a asp-controller="MusteriOzet" asp-action="Index"><p class="text-body mt-1 m-0"> <strong>Tedarikçi</strong>  </p></a>
                            </div>
                        </div>
                    </div>

                    <div class="card text-white bg-flat-color-3 height-125 col-sm-3 p-1 m-3" style="min-height:100px">
                        <div class="card-body">
                            <div class="card-left  float-left">
                                <a asp-controller="Islemler" asp-action="WorkList"><p class="text-body mt-1 m-0 "> <strong>Yapılacak İşler</strong>  </p></a>
                            </div>
                        </div>
                    </div>

                    <div class="card text-white bg-flat-color-3 height-125 col-sm-3 p-1 m-3" style="min-height:100px">
                        <div class="card-body">
                            <div class="card-left  float-left">
                                <a asp-controller="UserList" asp-action="Index"><p class="text-body mt-1 m-0"> <strong>Kullanıcı Tanımlama</strong>  </p></a>
                            </div>
                        </div>
                    </div>

                    <div class="card text-white bg-flat-color-3 height-125 col-sm-3 p-1 m-3" style="min-height:100px">
                        <div class="card-body">
                            <div class="card-left  float-left">
                                <a href="#"><p class="text-body mt-1 m-0"> <strong>Rapor</strong>  </p></a>
                            </div>
                        </div>
                    </div>

                    <div class="card text-white bg-flat-color-3 height-125 col-sm-3 p-1 m-3" style="min-height:100px">
                        <div class="card-body">
                            <div class="card-left  float-left">
                                <a asp-controller="Login" asp-action="LogOut"><p class="text-body mt-1 m-0"> <strong>Çıkış</strong>  </p></a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>




